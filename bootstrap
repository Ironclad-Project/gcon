set -ex

srcdir="$(dirname "$0")"
test -z "$srcdir" && srcdir=.

cd "$srcdir"

[ -d limine-terminal ] || git clone https://github.com/limine-bootloader/terminal.git limine-terminal
( cd limine-terminal && git checkout 0da2b853c857fb508d68d4c45f1fcd380efb9b9a )

automake_libdir="$(automake --print-libdir)"
mkdir -p build-aux
cp "${automake_libdir}/install-sh" build-aux
autoreconf -fvi
